<view>
  <view style="text-align: center;margin-top: 50rpx;"><text style="color: teal;font-size:larger;font-weight: 600;">登录\n\n</text></view>
  <t-input style="background-color: transparent; border: 1px solid lightseagreen;"
  label="用户名" placeholder="请输入用户名称" />
  <t-input
  style="background-color: transparent; border: 1px solid lightseagreen;"
  label="密码"
  type="password"
  placeholder="请输入密码"
  bind:click="click"
/>
<view class="but">    <t-button theme="primary" size="large" style="background-color: darkcyan;border-radius: 40rpx;">登录</t-button></view> 
</view>



<view style="margin-top: 100rpx;">
  <view style="text-align: center;margin-top: 10rpx;"><text style="color: teal;font-size:larger;font-weight: 600;">注册\n\n</text></view>
  <t-input style="background-color: transparent; border: 1px solid lightseagreen;"
  label="用户名" placeholder="请输入用户名称" suffixIcon="{{ { name: 'user-avatar', ariaLabel: '通讯录' } }}" />
  <t-input label="手机号" placeholder="请输入手机号码"
style="background-color: transparent; border: 1px solid lightseagreen;"
>
  <t-button slot="suffix" theme="primary" size="extra-small"
  style="background-color: darkcyan;"
  > 发送验证码 </t-button>
</t-input>

<t-input
  style="background-color: transparent; border: 1px solid lightseagreen;"
  label="密码"
  type="password"
  placeholder="请输入密码"
  suffixIcon="{{ { name: 'error-circle-filled', ariaLabel: '提示' } }}"
  bind:click="click"
/>
<view class="but">    <t-button theme="primary" size="large" style="background-color: darkcyan;border-radius: 40rpx;">登录</t-button></view>
</view>

<!-- <view style="position: absolute; top:500rpx;"> -->
<view  style="margin-top: 50rpx;">
  <view class="section">
    <textarea bindblur="bindTextAreaBlur"  auto-height placeholder="自动变高" />
    <!-- 不增高位置只有一行
      是否自动增高，设置auto-height时，style.height不生效 -->
  </view>
  <view class="section">
    <textarea placeholder="蓝绿色的placeholder" placeholder-style="color:darkcyan;"  />
  </view>
  <!-- <view class="section">
    <textarea placeholder="自动聚焦的textarea" auto-focus />
  </view> -->
  <view class="section">
    <textarea placeholder="按钮点击时聚焦" focus="{{focus}}" />
    <view class="btn-area">
      <button class="Bt" bindtap="bindButtonTap">点击使输入框获取焦点</button>
    </view>
  </view>
  <view class="section">
    <form bindsubmit="bindFormSubmit">
      <textarea placeholder="form 中的 textarea" name="textarea"/>
      <button class="Bt" form-type="submit"> 提交 </button>
    </form>
  </view>
</view>