<view style="background-color: powderblue;">
  <view  class="titl"><text>登录\n</text></view>
  <view class="cen">
    <input placeholder="请输入用户名" bindinput="bindKeyInput"/>
    <input password="true" placeholder="请输入密码~" bindinput="inputValue"/>
    <view class="but"><button class="Bt">登录</button></view>
    </view>  
</view>
<view style="position: absolute; top:500rpx;">
  <view class="section">
    <textarea bindblur="bindTextAreaBlur"  auto-height placeholder="自动变高" />
    <!-- 不增高位置只有一行
      是否自动增高，设置auto-height时，style.height不生效 -->
  </view>
  <view class="section">
    <textarea placeholder="蓝色的placeholder" placeholder-style="color:blue;"  />
  </view>
  <view class="section">
    <textarea placeholder="自动聚焦的textarea" auto-focus />
  </view>
  <view class="section">
    <textarea placeholder="按钮点击时聚焦" focus="{{focus}}" />
    <view class="btn-area">
      <button class="Bt" bindtap="bindButtonTap">点击使输入框获取焦点</button>
    </view>
  </view>
  <view class="section">
    <form bindsubmit="bindFormSubmit">
      <textarea placeholder="form 中的 textarea" name="textarea"/>
      <button class="Bt" form-type="submit"> 提交 </button>
    </form>
  </view>
</view>