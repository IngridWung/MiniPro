<view class="container">
  <!-- 聊天内容 -->
  <scroll-view class="chat-content" scroll-y="true" scroll-into-view="{{scrollIntoView}}">
    <view wx:for="{{messages}}" wx:key="{{index}}" class="message-item">
      {{item}}
    </view>
  </scroll-view>
  <!-- 发送消息 -->
  <view>
    <input placeholder="请输入消息" bindinput="onInput" value="{{inputValue}}"/>
    <button class="Bt" bindtap="sendMessage">发送</button>
  </view>
</view>
